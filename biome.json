{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["src/**/*.{js,ts}", "scripts/**/*.js", "*.{js,ts}"],
    "ignoreUnknown": true
  },
  "html": {
    "experimentalFullSupportEnabled": true
  },
  "formatter": {
    "useEditorconfig": true,
    "enabled": true,
    "lineEnding": "lf",
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "attributePosition": "multiline",
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],
      "linter": {
        "rules": {
          "style": { "useConst": "off", "useImportType": "off" },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off"
          }
        }
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noDefaultExport": "off",
        "useImportType": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn",
        "noArrayIndexKey": "warn"
      },
      "correctness": {
        "noUnusedImports": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      }
    }
  }
}
